<% if logged_in? %>
	<div class="col-lg-8">
		<%=form_for(@post) do |f|%>
			<%=render 'shared/error_messages', object: f.object%>
			<div class="field">
			<!--Define max length and form size-->
			<%= f.text_area :content,maxlength: 10000, size: "60x12", placeholder: "Compose new post..." %>
			</div>
			<%= f.submit "Post", class: "btn btn-primary" %>
		<%end%>
	</div>
<% else %>

	<div class="center jumbotron">
		<h1>LitBlog</h1>
		<h2>Welcome to the light blog platform</h2>
		<%=link_to "Sign up", signup_path, class:"btn btn-lg btn-primary"%>
	</div>
<% end %>


<%=provide(:title,"Edit post")%>
<h1><%="Edit your post"%></h1>
	<div class="col-lg-8">
		<%=form_for(@post) do |f|%>
			<%=render 'shared/error_messages', object: f.object%>
			<div class="field">
			<!--Define max length and form size-->
			<%= f.text_area :content,maxlength: 10000, size: "60x12", placeholder: @post.content %>
			</div>
			<%= f.submit "Edit", class: "btn btn-primary" %>
		<%end%>
